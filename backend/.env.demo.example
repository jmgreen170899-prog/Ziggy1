# ZiggyAI Backend Demo Mode Configuration
# Copy this file to .env and enable demo mode

# Enable demo mode (returns deterministic demo data)
DEMO_MODE=true

# Disable authentication in demo mode (recommended)
ENABLE_AUTH=false

# Optional: Database connections (not needed in demo mode)
# DATABASE_URL=postgresql://user:pass@localhost/ziggy
# REDIS_URL=redis://localhost:6379

# Optional: External services (disabled in demo mode)
# OPENAI_API_KEY=your-key-here
# ALPHA_VANTAGE_API_KEY=your-key-here

# Server configuration
HOST=0.0.0.0
PORT=8000
RELOAD=true
