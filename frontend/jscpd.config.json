{
  "mode": "strict",
  "threshold": 20,
  "minLines": 5,
  "minTokens": 50,
  "include": ["src/**/*.{ts,tsx,js,jsx}"],
  "exclude": [
    "node_modules/**",
    "**/*.d.ts",
    "**/*.test.{ts,tsx}",
    "**/*.spec.{ts,tsx}",
    "__tests__/**",
    "coverage/**"
  ],
  "reporters": ["json", "console"],
  "output": "artifacts/frontend",
  "format": ["typescript", "javascript"],
  "absolute": false,
  "gitignore": true
}
