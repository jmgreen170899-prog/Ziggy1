{
  "$schema": "https://unpkg.com/knip@latest/schema.json",
  "entry": [
    "src/app/**/*.{ts,tsx}",
    "src/pages/**/*.{ts,tsx}",
    "scripts/**/*.{ts,js}"
  ],
  "project": [
    "src/**/*.{ts,tsx}",
    "!src/**/*.{test,spec}.{ts,tsx}",
    "!src/__tests__/**"
  ],
  "ignore": [
    "src/types/**",
    "**/*.d.ts"
  ],
  "ignoreDependencies": [
    "@types/*",
    "tailwindcss",
    "postcss",
    "typescript",
    "axe-core",
    "eslint-config-next"
  ],
  "next": {
    "entry": [
      "next.config.{js,ts,mjs}",
      "src/app/layout.tsx",
      "src/app/page.tsx",
      "src/pages/**/*.{js,ts,jsx,tsx}",
      "src/middleware.{js,ts}"
    ]
  }
}